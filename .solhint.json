{
  "extends": "solhint:all",
  "rules": {
    "foundry-test-functions": "error",
    "not-rely-on-time": "error",
    "duplicated-imports": "error",
    "comprehensive-interface": "error",
    "explicit-types": "error",
    "gas-calldata-parameters": "error",
    "gas-custom-errors": "error",
    "gas-increment-by-one": "error",
    "gas-length-in-loops": "error",
    "gas-strict-inequalities": "error",
    "imports-order": "error",
    "immutable-vars-naming": "error",
    "func-named-parameters": "error",
    "gas-indexed-events": "error",
    "gas-named-return-values": "error",
    "max-line-length": "error",
    "named-parameters-mapping": "error",
    "no-empty-blocks": "error",
    "no-global-import": "error",
    "no-inline-assembly": "error",
    "no-unused-import": "error",
    "no-unused-vars": "error",
    "ordering": "error",
    "use-natspec": "error"
  }
}
